<section class="orders light-section ">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">Order page</h1>

        <% if(messages.success) { %>
        <div id="success-alert" class="flex itmes-center bg-green-500 text-lg font-bold text-white
         px-4 py-3" role="alert">
         <img src="/img/info.png" alt="" width="20px" height="20px">
         <p class="ml-2"><%= messages.success %></p>
        </div>
        <% } %>

        <table class="w-full bg-white table-auto">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Customer Id</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length) { 
                    orders.forEach((order)=>{ 
                %>
                <tr>
                    <td class="px-4 py-2 text-left border">
                        <a class="link" href="/"><%= order._id %></a>
                    </td>
                    <td class="px-4 py-2 text-left border"><%= order.phone %></td>
                    <td class="px-4 py-2 text-left border"><%= order.address %></td>
                    <td class="px-4 py-2 text-left border"><%= moment(order.createdAt).format('MMMM Do YYYY, hh:mm a') %></td>
                </tr>
                <% }) } else{ %>
                    <div class="container px-4 py-4 text-3xl text-center text-primary">No orders found!</div>
                <% } %>           
            </tbody>
        </table>

    </div>
</section>